<!DOCTYPE html>
<html>
<head>
  <title>Todo List</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <div id="header">
    <%= link_to 'Todo List', root_path %>
    <div id="user_info">
      <% if user_signed_in? %>
        Hello <%= current_user.email %>, <%= link_to 'Sign out', sign_out_path, method: :delete %>
      <% end %>
    </div>
  </div>

  <div id="container">
    <h1>todos</h1>
    <%= yield %>
  </div>

</body>
</html>
