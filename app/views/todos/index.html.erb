<% if user_signed_in? %>
  <%= form_for Todo.new, remote: true do |f| %>
    <%= f.text_field :title, placeholder: 'What needs to be done?' %>
  <% end %>
  <ul id="todos">
    <%= render @todos  %>
  </ul>
<% else %>
  <%= link_to 'Sign up', sign_up_path %> or <%= link_to 'Sign in', sign_in_path %> to manage yor todo list.
<% end %>
